int main(){
	PLL0CON = 1;
	PLL0CFG = 0x24;
	PLL0FEED = 0xAA;
	PLL0FEED = 0x55;
	
	while(!(PLL0STAT & (1 << 10)));
	
	PLL0CON |= 1 << 1;
	PLL0FEED = 0xAA;
	PLL0FEED = 0x55;
	
	PINSEL1 = (1 << 28) | (2 << 18);
	//AD0CR = (1 << 1) | (0xD << 8) | (1 << 17) | (1 << 21);
	//AD0INTEN = 1;
	
	int result; 
	/*
 	int i;
	i = 0;
	PINSEL1=1<<19;
	while(i<1024){
		DACR = (i)<<6;
		i = i+1;

	}
	*/
	int i = 0;
	while(1){
		int dac_output = ceil(1023*((float)input_wave[i++]/1000)/3.3);
		DACR = dac_output << 6;
		//AD0CR |= 1 << 24;
		//while(!(AD0GDR & (1 << 31)));
		//DACR = ((AD0GDR >> 6) & 0x3FF) << 6;
		//for(int i=0; i<1000; i++);
		//if(i == 1024){ i = 0; }
		
	}
		//result = (AD0DR1 >> 6) & 0x3FF;
}
